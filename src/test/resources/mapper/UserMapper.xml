<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.weaponlin.mapper.UserMapper">

    <resultMap id="UserMap" type="com.weaponlin.entity.User">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="gender" property="gender"/>
        <result column="age" property="age"/>
    </resultMap>

    <select id="select" resultMap="UserMap">
        select * from demo.user
    </select>

    <insert id="insert">
        insert into demo.user(id, name, gender, age) values(#{user.id}, #{user.name}, #{user.gender}, #{user.age})
    </insert>
</mapper>